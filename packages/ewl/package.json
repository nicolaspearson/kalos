{
  "name": "ewl",
  "version": "0.0.0",
  "description": "EWL provides common defaults for logging in an express application using winston.",
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "express",
    "logger",
    "typescript",
    "winston"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": "https://github.com/nicolaspearson/kalos.git",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint:eslint": "yarn exec:eslint --cache-file .eslintcache $(pwd)",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:prettier": "yarn exec:prettier --check $(pwd)",
    "lint:prettier:fix": "yarn exec:prettier --write $(pwd)",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:fix": "yarn lint:eslint:fix && yarn lint:prettier:fix",
    "test:unit": "yarn exec:jest --config $(pwd)/test/jest.config.js"
  },
  "dependencies": {
    "$": "link:./src",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.17.3",
    "express-http-context": "^1.2.4",
    "express-winston": "^4.2.0",
    "logform": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "safe-stable-stringify": "^2.3.1",
    "triple-beam": "^1.3.0",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "winston": "^3.6.0",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/logform": "^1.10.1",
    "@types/node": "^16.11.26",
    "@types/triple-beam": "^1.3.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "common-tags": "^1.8.2",
    "jest": "^27.5.1",
    "kalos": "workspace:*",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  }
}
